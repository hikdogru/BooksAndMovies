@model List<TVShowModel>





<div class="row">
    <strong>
        Total tvshow count is "@Model.Count"
    </strong>
    @foreach (var tvShow in Model)
    {
        if (tvShow.PosterPath != null)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <div id="tvShow">
                    <form method="post">
                        <img src="https://image.tmdb.org/t/p/w500/@tvShow.PosterPath" alt="tvShow Image" />
                        @await Html.PartialAsync("_TVShowInputsPartial", tvShow)


                        <button type="submit" class="btn btn-primary btn-sm mb-2" asp-action="AddTVShowToWatchedlist"> Add to watchedlist</button>
                        <button type="submit" class="btn btn-secondary btn-sm mb-2" asp-action="AddTVShowToWishList"> Add to wishlist </button>
                        <button type="submit" class="btn btn-info btn-sm mb-2" asp-action="TVShowDetail"><i class="fa fa-eye" aria-hidden="true"></i></button>
                    </form>
                </div>
            </div>

        }
    }


</div>



