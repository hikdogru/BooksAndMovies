@model MovieModel



<input type="hidden" name="id" asp-for="@Model.Id" />
<input type="hidden" name="realId" asp-for="@Model.RealId" />
<input type="hidden" name="title" asp-for="@Model.Title" />
<input type="hidden" name="originalTitle" asp-for="@Model.OriginalTitle" />
<input type="hidden" name="overview" asp-for="@Model.Overview" />
<input type="hidden" name="posterPath" asp-for="@Model.PosterPath" />
<input type="hidden" name="backdropPath" asp-for="@Model.BackdropPath" />
<input type="hidden" name="releaseDate" asp-for="@Model.ReleaseDate" />
<input type="hidden" name="voteAverage" asp-for="@Model.VoteAverage" />
<input type="hidden" name="voteCount" asp-for="@Model.VoteCount" />
<input type="hidden" name="popularity" asp-for="@Model.Popularity" />


<h4>@Model.Title </h4>
<p>@Model.OriginalTitle</p>
<p><i class="fa fa-star" aria-hidden="true"></i> @Model.VoteAverage</p>
