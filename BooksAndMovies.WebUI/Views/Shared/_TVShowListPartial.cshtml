@model TVShowViewModel
@{
    string methodName = "RemoveTVShowFrom" + Model.TVShowListType;
}

<div class="row">
    <strong>
        Total tvshow count is "@Model.TVShows.Count"
    </strong>
    @foreach (var tvShow in Model.TVShows)
    {
        if (tvShow.BackdropPath != null)
        {
            <div class="col-md-3">
                <div id="tvShow">
                    <form method="post">
                        <img src="@tvShow.BackdropPath" alt="tvShow Image" />
                        <input type="hidden" name="id" asp-for="@tvShow.Id" />
                        <input type="hidden" name="name" asp-for="@tvShow.Name" />
                        <input type="hidden" name="originalName" asp-for="@tvShow.OriginalName" />
                        <input type="hidden" name="overview" asp-for="@tvShow.Overview" />
                        <input type="hidden" name="posterPath" asp-for="@tvShow.PosterPath" />
                        <input type="hidden" name="backdropPath" asp-for="@tvShow.BackdropPath" />
                        <input type="hidden" name="firstAirDate" asp-for="@tvShow.FirstAirDate" />
                        <input type="hidden" name="voteAverage" asp-for="@tvShow.VoteAverage" />
                        <input type="hidden" name="voteCount" asp-for="@tvShow.VoteCount" />
                        <input type="hidden" name="popularity" asp-for="@tvShow.Popularity" />
                        <h4>@tvShow.Name </h4>
                        <p>@tvShow.OriginalName</p>
                        <p>@tvShow.VoteAverage</p>
                        @if (Model.TVShowListType == "Wishlist")
                        {
                            <button type="submit" class="btn btn-primary btn-sm mb-2" asp-action="MoveTVShowToWatchedlist"> Move to watchedlist</button>

                        }
                        else if(Model.TVShowListType == "Watchedlist")
                        {
                            <button type="submit" class="btn btn-primary btn-sm mb-2" asp-action="AddTVShowToFavouritelist"> Add to favourites</button>

                        }
                        <button type="submit" class="btn btn-danger btn-sm mb-2" asp-action="@methodName">Remove from @Model.TVShowListType </button>
                    </form>
                </div>
            </div>
        }
    }
</div>